<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="15dp"
    android:id="@+id/main"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/keberangkatand_dan_tujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jalan Sriwijaya 2 Nomor 5 - Gunung Bromo"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#1E1E1E"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TanggalJam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19-11-2024 00:00"
                    android:textSize="14sp"
                    android:textColor="#1E1E1E" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal/Jam Berangkat"
                    android:textSize="12sp"
                    android:textColor="#757575" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/Harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="100.000 IDR"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1E1E1E" />

            <TextView
                android:id="@+id/jumlahKursiTersedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Kursi Tersedia"
                android:textSize="14sp"
                android:textColor="#4CAF50" />
        </LinearLayout>

        <Button
            android:id="@+id/btnDetail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="DETAIL"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/bg_gradient" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
