<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_real">





    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_gradient"
        android:visibility="visible"
        app:menu="@menu/bottom_menu"
        android:layout_alignParentBottom="true" />

    <include layout="@layout/dashboard_toolbar"/>
    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashboard_toolbar"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="60dp"
        android:text="History"
        android:background="@drawable/button_selector"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/black"/>

    <Button
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashboard_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="250dp"
        android:text="Pemesanan"
        android:background="@drawable/button_selector"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/black"/>

    <Button
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashboard_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="250dp"
        android:text="Pemesanan"
        android:background="@drawable/button_selector"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/black"/>

    <Button
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashboard_toolbar"
        android:layout_marginRight="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="250dp"
        android:text="Kritik dan Saran"
        android:background="@drawable/button_selector"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/black"/>


    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_below="@+id/dashboard_toolbar"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:src="@drawable/jelajahibromo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:src="@drawable/wanderlust" />
    </ViewFlipper>

</RelativeLayout>
