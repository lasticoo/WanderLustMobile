<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_real">

    <FrameLayout
        android:id="@+id/flFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="100dp">

    <include layout="@layout/dashboard_toolbar"/>

    <Button
        android:id="@+id/history_button"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="60dp"
        android:text="History"
        android:background="@drawable/button_selector"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/pemesanan_button"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="250dp"
        android:text="Pemesanan"
        android:background="@drawable/button_selector"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/black"/>



    <Button
        android:id="@+id/kritik_saran_button"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="250dp"
        android:text="Kritik dan Saran"
        android:background="@drawable/button_selector"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/black"/>

        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:layout_below="@+id/pemesanan_button"
            android:layout_marginTop="80dp">

        <ImageView
            android:id="@+id/bromo2"
            android:layout_width="wrap_content"
            android:layout_height="380dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/wanderlust" />

        <ImageView
            android:id="@+id/bromo"
            android:layout_width="wrap_content"
            android:layout_height="390dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/jelajahibromo"
            android:layout_marginBottom="15dp"
            />
        </ViewFlipper>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>