<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="200dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/destinationImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wanderlust" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/destinationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gunung Bromo"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppinsregular"/>

            <TextView
                android:id="@+id/destinationLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Jawa Timur"
                android:textSize="12sp"
                android:fontFamily="@font/poppinsregular"/>

            <TextView
                android:id="@+id/destinationPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Rp 500.000"
                android:textColor="#1976D2"
                android:textStyle="bold"
                android:textSize="12sp"
                android:fontFamily="@font/poppinsregular"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>